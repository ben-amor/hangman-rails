<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= clue(game) %>
  </div>

    <%= form.hidden_field :word_to_be_guessed %>
    <%= form.hidden_field :guesses %>

    <!-- TODO don't show this on a new game screen -->
  <div class="field">
    <%= guesses_for_display(game) %>
  </div>

  <div class="field">
    <%= form.label 'New guess' %>
    <%= form.text_field :most_recent_guess %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
